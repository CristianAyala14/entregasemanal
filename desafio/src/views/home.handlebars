{{!-- aqui muestro lista de productos --}}
<div>
    <h2>Lista de productos</h1>
    <ul>
        {{#each products}}
            <li><strong>Titulo:</strong>{{title}}</li>
            <li><strong>Descripcion:</strong>{{description}}</li>
            <li><strong>Codigo:</strong>{{code}}</li>
            <li><strong>Precio:</strong>{{price}}</li>
            <li><strong>Stock:</strong>{{stock}}</li>
            <li><strong>Categoria:</strong>{{category}}</li>
            <li><strong>Id:</strong>{{id}}</li>
            <br>
        {{/each}}
    </ul>
    <br>
    <h2>Crear producto: </h1> 
    <form action="/api/products" enctype="multipart/form-data" method="post">
        <label>Nombre: </label>
        <input name="title">
        <label>Descripcion: </label>
        <input name="description">
        <label>Codigo: </label>
        <input name="code">
        <label>Precio: </label>
        <input name="price">
        <label>Stock: </label>
        <input name="stock">
        <label>Categoria: </label>
        <input name="category">
        <input type="file" name="thumbnail">
        <input type="submit" >
    </form>

</div>
